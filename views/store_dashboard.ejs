<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/images/fave icon.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Your store</title>
    <link rel="stylesheet" href="/css/store_nav.css">
    <!-- <link rel="stylesheet" href="/css/store_products.css"> -->
    <link rel="stylesheet" href="/css/store_dashboard.css">
</head>

<body>
    <%- include('partials/store_nav.ejs', {logo:storelogo}) %>

        <div id="items-section">
            <div id="top-layer">
                <div>
                    <p id="page-title">dashboard</p>
                </div>
                <div>
                    <select name="" id="">
                        <option value="last week">last week</option>
                        <option value="last week">last week</option>
                        <option value="last month">last month</option>
                        <option value="last year">last year</option>
                        <option value="lifetime">lifetime</option>
                    </select>
                    <!-- <input type="search" name="" id="">
            <button><i class="bi bi-search"></i></button> -->
                </div>
            </div>
            <div id="botem-layer">
                <div>
                    <a>
                        <h3 class="titles">sales</h3>
                        <hr>
                        <p class="item1">$&nbsp;<%= saleIs %>
                        </p>
                    </a>
                </div>
                <div>
                    <a href="/bahadur/v1/store/orders">
                        <h3 class="titles">orders</h3>
                        <hr>
                        <p class="item1">
                            <%= orderIs %>
                        </p>
                    </a>
                </div>
                <div>
                    <a>
                        <h3 class="titles">earnings</h3>
                        <hr>
                        <p class="item1">$&nbsp;<%= earningIs %>
                        </p>
                    </a>
                </div>
                <div id="section4">
                    <a href="/bahadur/v1/store/orders">
                        <h3 class="titles">latest orders</h3>
                        <hr>
                        <div class="order-items">
                            <table>
                                <tbody>

                                    <% let counter=0; %>
                                        <% ordersIs.forEach( item=> { %>
                                            <% if (counter < 6) { %>
                                                <tr>
                                                    <td>
                                                        <img class="product-image" src="<%= item.prodPicture %>"
                                                            alt="image">
                                                    </td>
                                                    <td>
                                                        <p>
                                                            <%= item.prodName %>
                                                        </p>
                                                    </td>
                                                    <td>
                                                        <p>
                                                            <%= item.custmrName %>
                                                        </p>
                                                    </td>
                                                    <td>
                                                        <p>
                                                            <%= item.orderDate %>
                                                        </p>
                                                    </td>
                                                </tr>
                                                <% counter++; %>
                                            <% } else { %>
                                        <% return; %>
                                    <% } %>
                                <% }); %>

                                </tbody>
                            </table>
                        </div>
                    </a>
                </div>
                <div>
                    <a href="/bahadur/v1/store/reviews">
                        <h3 class="titles">reviews</h3>
                        <hr>
                        <p class="item1">
                            <%= reviewIs %>
                        </p>
                    </a>
                </div>
                <div id="like-bookmark">
                    <a href="/bahadur/v1/store/bookmarks">
                        <h3 class="titles">bookmarks</h3>
                        <hr>
                        <div class="item2">
                            <p>
                                <%= bookmarkIs.true %> <i class="bi bi-arrow-up"></i>
                            </p>
                            <p>
                                <%= bookmarkIs.false %> <i class="bi bi-arrow-down"></i>
                            </p>
                        </div>
                    </a>
                    <a>
                        <h3 class="titles">likes</h3>
                        <hr>
                        <div class="item2">
                            <p>
                                <%= likeIs.true %> <i class="bi bi-arrow-up"></i>
                            </p>
                            <p>
                                <%= likeIs.false %> <i class="bi bi-arrow-down"></i>
                            </p>
                        </div>
                    </a>
                </div>
            </div>
        </div>

        <!-- its open in store_nav and close here -->
        </div>

</body>

</html>