<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="shortcut icon" href="/images/fave icon.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Brands</title>
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/brands.css">
</head>
<body>
    <%- include('partials/nav.ejs', {profilepic:userProfile, totalQuantity}) %>

    <div id="brands-page">
        <div id="brands-section-1">
            <h3>brands</h3>
            <p>lorem ipsum dolor sit amet consectetur, adipisicing elit. Inventore, dignissimos!</p>
        </div>
        <div id="brands-section-2">
            
            <% allstore.forEach((items)=>{ %>
                <div class="brand">
                    <a href="/bahadur/v1/brand/<%= items._id %>">
                        <div class="brand-img">
                            <img src="<%= items.logo %>" alt="image">
                        </div>
                        <div class="brand-name">
                            <h2><%= items.name %> </h2>
                        </div>
                    </a>
                </div>
                <% }) %>
        </div>
    </div>
    <%- include('partials/footer.ejs') %>
</body>
</html>