<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/images/fave icon.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Ecommerce</title>
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/products.css">
</head>

<body>
    <%- include('partials/nav.ejs', {profilepic:userProfile, totalQuantity}) %>
    <div id="products-page">
        <div id="products-section">
                <% product.forEach((pro)=>{ %>
                <div class="product">
                    <a class="product-anc" href="product/<%= pro._id %>">
                        <div class="product-img-div">
                            <img class="product-img" src="<%= pro.picture %>" alt="">
                        </div>
                        <div class="product-dis-div">
                            <div class="product-title">
                                <h4><%= pro.name %></h4>
                            </div>
                            <div class="product-pric-section">
                                <p>$&nbsp;<span><%= pro.price %></span></p>
                            </div>
                        </div>
                    </a>
                </div>
                <% }); %>
            </div>
        </div>

        <%- include('partials/footer.ejs') %>
</body>

</html>