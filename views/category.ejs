<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/images/fave icon.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>category</title>
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/category.css">
    <link rel="stylesheet" href="/css/products.css">
    <link rel="stylesheet" href="/css/brands.css">
</head>
<body>
    <%- include('partials/nav.ejs', {profilepic:userProfile, totalQuantity}) %>
    
    <div id="category-page">
        <div id="video-div">
            <video autoplay muted loop src="<%= category.video %>"></video>
        </div>
        <div id="category-content">
            <h2><%= category.name %></h2>
            <p><%= category.discription %></p>
        </div>
    </div>

    <div id="products-page">
        <h3 class="section-title">Products</h3>
        <div id="products-section">

            <% productsIs.forEach((product)=>{ %>
                <div class="product">
                    <a class="product-anc" href="/bahadur/v1/product/<%= product._id %>">
                        <div class="product-img-div">
                            <img class="product-img" src="<%= product.picture %>" alt="image">
                        </div>
                        <div class="product-dis-div">
                            <div class="product-title">
                                <h4><%= product.name %></h4>
                            </div>
                            <div class="product-pric-section">
                                <p>$&nbsp;<span><%= product.price %></span></p>
                            </div>
                        </div>
                    </a>
                </div>
                <% }) %>
                
            </div>
    </div>

    <div id="brands-page">
        <div id="brands-section-1">
            <h3>brands</h3>
        </div>
        <div id="brands-section-2">

            <% stors.forEach((stor)=>{ %>
            <div class="brand">
                <a href="/bahadur/v1/brand/<%= stor._id %>">
                    <div class="brand-img">
                        <img src="<%= stor.logo %>" alt="image">
                    </div>
                    <div class="brand-name">
                        <h2><%= stor.name %></h2>
                    </div>
                </a>
            </div>
            <% }); %>

        </div>
    </div>

    <%- include('partials/footer.ejs') %>
</body>
</html>