<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/images/fave icon.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Your customers</title>
    <link rel="stylesheet" href="/css/store_nav.css">
    <link rel="stylesheet" href="/css/store_products.css">
</head>

<body>
    <%- include('partials/store_nav.ejs', {logo:storelogo}) %>

        <div id="items-section">
            <div id="top-layer">
                <div>
                    <p id="page-title">customer</p>
                </div>
                <div>
                    <p>date</p>
                </div>
            </div>
            <div id="botem-layer">
                <div id="sin-customer-section">
                    <div>
                        <img src="<%= customerIs.picture %>" alt="image">
                    </div>
                    <div>
                        <h2><%= customerIs.name %></h2>
                        <p><%= customerIs.email %></p>
                    </div>
                    <div>
                        <p>Purchases: <%= customerIs.totalpurchase %></p>
                        <p>products: <%= customerIs.totalquan %></p>
                    </div>
                </div>
                <div id="customer-order-section">
                    <div>
                        <table>
                            <tbody>

                                <% orders.forEach((order)=>{ %>
                                <tr>
                                    <td>
                                        <p>no</p>
                                    </td>
                                    <td>
                                        <img class="user-image" src="<%= order.picture %>" alt="image">
                                    </td>
                                    <td>
                                        <h2><%= order.name %></h2>
                                    </td>
                                    <td>
                                        <p><%= order.totalprice %></p>
                                    </td>
                                    <td>
                                        <p><%= order.quantity %></p>
                                    </td>
                                    <td>
                                        <a href="/bahadur/v1/store/order/<%= order.orderId %>/<%= order.Id %>">
                                        <!-- <a href="/bahadur/v1/store/product/update/<%= order.Id %>"> -->
                                            <i class="bi bi-box-arrow-in-right"></i></a>
                                    </td>
                                </tr>
                                <% }); %>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        </div>
</body>

</html>