<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/images/fave icon.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Ecommerce</title>
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/category.css">
</head>

<body>
    <%- include('partials/nav.ejs', {profilepic:userProfile, totalQuantity}) %>

        <div id="categories-page">
            <div id="categories-section-1">
                <h3>categories</h3>
                <p>Explore Our Curated Collection of Leading Brands in Every Category.</p>
            </div>
            <div id="categories-section-2">
                <% category.forEach((cat)=>{ %>
                    <a href="categorys/<%= cat._id %>" class="categry" id="categry">
                        <div class="cat-vid">
                            <video id="video" muted src="<%= cat.video %>" width="250" height="250"></video>
                        </div>
                        <div class="cat-name">
                            <h2>
                                <%= cat.name %>
                            </h2>
                        </div>
                    </a>
                    <% }); %>
            </div>
        </div>

        <%- include('partials/footer.ejs') %>
        <script src="/script/categories.js"></script>
</body>

</html>