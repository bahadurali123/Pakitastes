<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/images/fave icon.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Your customers</title>
    <link rel="stylesheet" href="/css/store_nav.css">
    <link rel="stylesheet" href="/css/store_products.css">
</head>
<body>
    <%- include('partials/store_nav.ejs', {logo:storelogo}) %>

    <div id="items-section">
        <div id="top-layer">
            <div>
                <p id="page-title">customers</p>
            </div>
            <!-- <div>
                <p>date</p>
            </div> -->
            <!-- <div id="add-item">
                <a href="">add&nbsp;product</a>
            </div> -->
            <div>
                <select name="" id="">
                    <option value="last week">last week</option>
                    <option value="last month">last month</option>
                    <option value="last year">last year</option>
                    <option value="lifetime">lifetime</option>
                </select>
            </div>
        </div>
        <div id="botem-layer">
            <!-- <div id="products-section"> -->
            <div id="customers-section">
                <div>
                    <table>
                        <thead>
                            <tr>
                                <td>
                                    <p>no</p>
                                </td>
                                <td>
                                    <p>profile</p>
                                    <!-- <img class="user-image" src="../public/images/tmpImage.png" alt="image"> -->
                                </td>
                                <td>
                                    <h2>name</h2>
                                </td>
                                <td>
                                    <p>purchases</p>
                                </td>
                                <td>
                                    <p>quantity</p>
                                </td>
                                <td>
                                    <a><i
                                        class="bi bi-box-arrow-in-right"></i></a>
                                </td>
                        </tr>
                        </thead>
                        <tbody>
                            <% customer.forEach((items)=>{ %>
                                <tr>
                                    <td>
                                        <p><%= items.index < 9 ? "0"+ items.index: items.index; %></p>
                                    </td>
                                    <td>
                                        <img class="user-image" src="<%= items.custmrPicture %>" alt="image">
                                    </td>
                                    <td>
                                        <h2><%= items.custmrName %></h2>
                                    </td>
                                    <td>
                                        <p><%= items.totalPriceIs %></p>
                                    </td>
                                    <td>
                                        <p><%= items.totalQuantityIs %></p>
                                    </td>
                                    <td>
                                        <a href="/bahadur/v1/store/customer/<%= items.custmrId %>"><i
                                            class="bi bi-box-arrow-in-right"></i></a>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </body>
    </html>