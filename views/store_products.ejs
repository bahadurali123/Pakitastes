<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/images/fave icon.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Your products</title>
    <link rel="stylesheet" href="/css/store_nav.css">
    <link rel="stylesheet" href="/css/store_products.css">
</head>
<body>
    <%- include('partials/store_nav.ejs', {logo:storelogo}) %>

    <div id="items-section">
        <div id="top-layer">
            <div>
                <p id="page-title">Products</p>
            </div>
            <div id="add-item">
                <a href="/bahadur/v1/store/product/create">add&nbsp;product</a>
            </div>
            <div>
                <select name="" id="">
                    <option value="last week">last week</option>
                    <option value="last month">last month</option>
                    <option value="last year">last year</option>
                    <option value="lifetime">lifetime</option>
                </select>
            </div>
        </div>
        <div id="botem-layer">
            <div id="products-section">
                <div>

                    <table>
                        <tbody>
                            <% products.forEach((items)=>{ %>
                                <tr>
                                    <td>
                                        <img src="<%= items.picture %>" alt="image">
                                    </td>
                                    <td>
                                        <h2><%= items.name %></h2>
                                    </td>
                                    <td>
                                        <p><%= items.price %></p>
                                    </td>
                                    <td>
                                        <% const product_cat = categorys.filter(category => category._id.equals(items.categoryId)); %>
                                        <p><%= product_cat[0].name %></p>
                                    </td>
                                    <td>
                                        <p><%= items.stockQty %></p>
                                    </td>
                                    <td>
                                        <a href="/bahadur/v1/store/product/delete/<%= items._id %>"><i class="bi bi-trash"></i></a>
                                    </td>
                                    <td>
                                        <a href="/bahadur/v1/store/product/update/<%= items._id %>"><i class="bi bi-pencil-square"></i></a>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>



</div>
</body>
</html>